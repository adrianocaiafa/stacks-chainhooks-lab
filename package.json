{
  "name": "stacks-chainhooks-lab",
  "version": "1.0.0",
  "description": "Stacks Chainhooks Lab Project",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsc",
    "build:client": "vite build",
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"API,CLIENT\" --prefix-colors \"blue,green\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:client": "vite",
    "server": "tsx src/server.ts",
    "chainhook:simple-gm": "tsx src/chainhooks/contract-call-simple-gm.ts",
    "chainhook:deploy": "tsx src/chainhooks/contract-deploy.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "stacks",
    "chainhooks",
    "blockchain"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@hirosystems/chainhooks-client": "^1.0.0",
    "@stacks/connect": "^7.8.0",
    "@stacks/network-v6": "^6.17.0",
    "@stacks/transactions": "^6.12.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "undici": "^7.16.0"
  }
}
